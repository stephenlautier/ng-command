{
	"compilerOptions": {
		"module": "amd",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": false,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
		"filesGlob": [
		"./**/*.ts",
		"./tools/typings/**/*.d.ts",
		"!./node_modules/**/*.ts",
		"!./build/**/*.d.ts"
	]
}